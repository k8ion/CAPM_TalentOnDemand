<!-- Code Generated by Sidekick is for learning and experimentation purposes only. -->
<mvc:View
    controllerName="talentondemand.controller.WellbeingProductList"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
    height="100%">
    
    <Page
        id="wellbeingProductListPage"
        title="Wellbeing Products"
        showNavButton="true"
        navButtonPress="onNavBack">
        
        <content>
            
            <!-- Filter Bar (List Report Style) -->
            <Toolbar id="filterToolbar">
                <Title id="_IDGenTitle1" text="Filters" level="H2"/>
            </Toolbar>
            
            <Toolbar id="_IDGenToolbar1">
                <SearchField
                    id="searchField"
                    width="300px"
                    placeholder="Search by product name or vendor..."
                    search="onSearch"/>
                <ToolbarSpacer id="_IDGenToolbarSpacer"/>
                <Button id="_IDGenButton" text="Go" press="onFilterGo" type="Emphasized"/>
                <Button id="_IDGenButton1" text="Clear" press="onFilterClear"/>
            </Toolbar>
            
            <!-- Summary Section -->
            <Toolbar id="_IDGenToolbar2" class="sapUiSmallMarginTop">
                <HBox id="_IDGenHBox" width="100%" justifyContent="SpaceBetween">
                    <VBox id="_IDGenVBox" class="sapUiSmallMarginEnd">
                        <Label id="_IDGenLabel" text="Total Subsidy"/>
                        <ObjectNumber id="_IDGenObjectNumber"
                            number="{viewModel>/totalAmount}"
                            unit="{viewModel>/currency}"
                            emphasized="false"/>
                    </VBox>
                    <VBox id="_IDGenVBox1" class="sapUiSmallMarginEnd">
                        <Label id="_IDGenLabel1" text="Amount Spent"/>
                        <ObjectNumber id="_IDGenObjectNumber1"
                            number="{viewModel>/spentAmount}"
                            unit="{viewModel>/currency}"
                            state="Warning"/>
                    </VBox>
                    <VBox id="_IDGenVBox2">
                        <Label id="_IDGenLabel2" text="Remaining Balance"/>
                        <ObjectNumber id="_IDGenObjectNumber2"
                            number="{viewModel>/remainingAmount}"
                            unit="{viewModel>/currency}"
                            state="Success"/>
                    </VBox>
                </HBox>
            </Toolbar>
            
            <!-- Products Table (List Report Style) -->
            <Table
                id="productsTable"
                inset="false"
                items="{
                    path: 'viewModel>/products',
                    sorter: {
                        path: 'receiptDate',
                        descending: true
                    }
                }"
                growing="true"
                growingThreshold="20"
                mode="SingleSelectMaster"
                sticky="ColumnHeaders,HeaderToolbar">
                
                <headerToolbar>
                    <OverflowToolbar id="_IDGenOverflowToolbar">
                        <Title id="_IDGenTitle2"
                            text="Products ({viewModel>/products/length})"
                            level="H2"/>
                        <ToolbarSpacer id="_IDGenToolbarSpacer3"/>
                        <Button id="_IDGenButton2"
                            icon="sap-icon://excel-attachment"
                            text="Export"
                            press="onExport"
                            tooltip="Export to Excel"/>
                        <Button id="_IDGenButton3"
                            icon="sap-icon://action-settings"
                            press="onTableSettings"
                            tooltip="Table Settings"/>
                    </OverflowToolbar>
                </headerToolbar>
                
                <columns>
                    <Column id="_IDGenColumn" width="10em">
                        <Text id="_IDGenText" text="Product ID"/>
                    </Column>
                    <Column id="_IDGenColumn1" minScreenWidth="Tablet" demandPopin="true">
                        <Text id="_IDGenText1" text="Product Name"/>
                    </Column>
                    <Column id="_IDGenColumn2" minScreenWidth="Desktop" demandPopin="true">
                        <Text id="_IDGenText3" text="Description"/>
                    </Column>
                    <Column id="_IDGenColumn3" minScreenWidth="Tablet" demandPopin="true">
                        <Text id="_IDGenText4" text="Vendor"/>
                    </Column>
                    <Column id="_IDGenColumn4" minScreenWidth="Desktop" demandPopin="true" hAlign="End">
                        <Text id="_IDGenText5" text="Amount"/>
                    </Column>
                    <Column id="_IDGenColumn5" minScreenWidth="Tablet" demandPopin="true">
                        <Text id="_IDGenText6" text="Receipt Date"/>
                    </Column>
                </columns>
                
                <items>
                    <ColumnListItem id="_IDGenColumnListItem" type="Active" press="onProductPress">
                        <cells>
                            <ObjectIdentifier id="_IDGenObjectIdentifier"
                                title="{viewModel>productID}"
                                text="{viewModel>productName}"/>
                            <Text id="_IDGenText7" text="{viewModel>productName}"/>
                            <Text id="_IDGenText8"
                                text="{viewModel>description}"
                                maxLines="2"/>
                            <Text id="_IDGenText9" text="{viewModel>vendor}"/>
                            <ObjectNumber id="_IDGenObjectNumber3"
                                number="{viewModel>amount}"
                                unit="{viewModel>/currency}"
                                emphasized="false"/>
                            <Text id="_IDGenText10" text="{
                                path: 'viewModel>receiptDate',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    pattern: 'dd MMM yyyy'
                                }
                            }"/>
                        </cells>
                    </ColumnListItem>
                </items>
                
            </Table>
            
            <!-- Total Summary Below Table -->
            <Toolbar id="_IDGenToolbar3" class="sapUiTinyMarginTop">
                <ToolbarSpacer id="_IDGenToolbarSpacer4"/>
                <Label id="_IDGenLabel3" text="Total Amount Spent:" design="Bold" class="sapUiSmallMarginEnd"/>
                <ObjectNumber id="_IDGenObjectNumber4"
                    number="{viewModel>/spentAmount}"
                    unit="{viewModel>/currency}"
                    emphasized="true"
                    state="Warning"/>
            </Toolbar>
            
        </content>
    </Page>
</mvc:View>
